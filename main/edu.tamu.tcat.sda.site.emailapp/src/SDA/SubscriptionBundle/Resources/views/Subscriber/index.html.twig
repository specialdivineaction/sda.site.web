{% extends 'SDASubscriptionBundle::layout.html.twig' %}

{% block content %}
    <div class="page-header">
        <h1>Subscribers</h1>
    </div>

    <table class="table table-striped table-bordered">
        <thead>
            <tr>
                <th class="text-center">Entered?</th>
                <th>Email</th>
                <th class="text-right">Actions</th>
            </tr>
        </thead>
        <tbody>
            {% for entity in entities %}
                <tr>
                    <td class="text-center">
                        {% if entity.entered %}
                            <span class="text-success">
                                <i class="glyphicon glyphicon-ok"></i>
                                <span class="sr-only">Yes</span>
                            </span>
                        {% endif %}
                    </td>
                    <td><a href="mailto:{{ entity.email }}">{{ entity.email }}</a></td>
                    <td class="text-right">
                        {% if not entity.entered %}
                            <a href="{{ path('sub_enter', {'id': entity.id}) }}" class="btn btn-sm btn-default">
                                <i class="glyphicon glyphicon-check"></i>
                                <span class="sr-only">Mark Entered</span>
                            </a>
                        {% endif %}
                        <a href="{{ path('sub_delete', {'id': entity.id}) }}" class="btn btn-sm btn-danger" onclick="return confirm('Are you sure you want to delete {{ entity.email }}?');">
                            <i class="glyphicon glyphicon-trash"></i>
                            <span class="sr-only">Delete</span>
                        </button>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="3" class="text-center text-muted">Nothing to see here.</td>
                </tr>
            {% endfor %}
        </tbody>
    </table>
{% endblock %}
