<section class="citation">
   <span class="authors"></span>
   <span class="titleinfo">{{ title }}</span>
   <span class="volume">Volume {{ volumeNumber }}</span>
   <span class="pubinfo"></span>
</section>

{% if copyRef %}
   <div class="volume-copy readonline icon-only">
      <i class="fa fa-book"></i>
      <span class="sr-only">Read Volume {{ volumeNumber }} Online</span>
   </div>
{% endif %}

{% if summary | striptags %}
   <section class="summary">
      <h4>Summary</h4>
      <div class="content">{{ summary }}</div>
   </section>
{% endif %}
