<div class="partition partition-default">
   <h3 class="partition-title acc-trigger">{{ editionName }}</h3>
   <div class="partition-body acc-segment">
      <section class="citation">
         <span class="authors"></span>
         <span class="titleinfo">{{ title }}</span>
         <span class="pubinfo"></span>
      </section>

      <!-- TODO Handle if not supplied . . . probably supply default summary-->
      <section class="summary">
         <h4>Summary</h4>
         <div class="content">{{ summary }}</div>
      </section>

      <!-- TODO Do not display if no volumes are present -->
      <section class="volumes">
         <h4 class="acc-trigger">Volumes</h4>
         <div></div>
      </section>
   </div>
</div>
